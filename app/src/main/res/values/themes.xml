<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TaskManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Text">
        <item name="fontFamily">@font/iransans_medium</item>
        <item name="android:textSize">@dimen/dimen_15</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="Text.Medium_White" parent="Text">
        <item name="android:textSize">@dimen/dimen_20</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/iransans_medium</item>
    </style>

    <style name="Text.Medium_Black" parent="Text">
        <item name="android:textSize">@dimen/dimen_20</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/iransans_medium</item>
    </style>

    <style name="Text.Large_Black" parent="Text">
        <item name="android:textSize">@dimen/dimen_25</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/iransans_medium</item>
    </style>

    <style name="Text.Large_White" parent="Text">
        <item name="android:textSize">@dimen/dimen_25</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/iransans_medium</item>
    </style>

    <style name="Text.Authentication_Box" parent="Text.Medium_Black">
        <item name="singleLine">true</item>
        <item name="android:drawablePadding">@dimen/standard_margin_small</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginStart">@dimen/standard_margin_x</item>
        <item name="android:layout_marginEnd">@dimen/standard_margin_x</item>
    </style>

</resources>